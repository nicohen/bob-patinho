<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                        http://www.springframework.org/schema/security
                         http://www.springframework.org/schema/security/spring-security-2.0.1.xsd">

	<global-method-security secured-annotations="enabled">
	</global-method-security>

	<http auto-config="true" access-denied-page="/accessDenied.jsp">

		<intercept-url pattern="/login.jsf*" access="IS_AUTHENTICATED_ANONYMOUSLY"/>

		<intercept-url pattern="/**"
			access="ROLE_SUPERVISOR,ROLE_USER,ROLE_TELLER" />

		<form-login login-processing-url="/j_spring_security_check"
			login-page="/login.jsf" default-target-url="/"
			authentication-failure-url="/login.jsf" />
		<logout logout-url="/logout*" logout-success-url="/login.jsf" />

	</http>

	<authentication-provider>
		<user-service>
			<user name="duilio" password="duilio"
				authorities="ROLE_USER, ROLE_ADMIN" />
			<user name="sergio" password="sergio"
				authorities="ROLE_USER" />
			<user name="nico" password="nico" authorities="ROLE_USER" />
			<user name="nacho" password="nacho" authorities="ROLE_USER" />
		</user-service>
	</authentication-provider>


</beans:beans>