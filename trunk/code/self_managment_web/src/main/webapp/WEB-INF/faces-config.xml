<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">

	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<el-resolver>
			org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>

		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>es</supported-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<message-bundle>messages</message-bundle>
	</application>

	<converter>
		<converter-id>
			com.self_managment.web.converter.MetricConverter
		</converter-id>
		<converter-class>
			com.self_managment.web.converter.MetricConverter
		</converter-class>
	</converter>

	<converter>
		<converter-id>
			com.self_managment.web.converter.SupervisorConverter
		</converter-id>
		<converter-class>
			com.self_managment.web.converter.SupervisorConverter
		</converter-class>
	</converter>

	<converter>
		<converter-id>
			com.self_managment.web.converter.CampaignConverter
		</converter-id>
		<converter-class>
			com.self_managment.web.converter.CampaignConverter
		</converter-class>
	</converter>

	<component>
		<component-type>
			net.sf.jsfcomp.acegijsf.Authorize
		</component-type>
		<component-class>
			net.sf.jsfcomp.acegijsf.Authorize
		</component-class>
	</component>
	<component>
		<component-type>
			net.sf.jsfcomp.acegijsf.Authentication
		</component-type>
		<component-class>
			net.sf.jsfcomp.acegijsf.Authentication
		</component-class>
	</component>

	<!-- <lifecycle>
		<phase-listener>
			net.sf.jsfcomp.onload.OnLoadPhaseListener
		</phase-listener>
	</lifecycle> -->

</faces-config>